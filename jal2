  <script>
    function obtenerParametro(nombre) {
      const url = new URLSearchParams(window.location.search);
      return url.get(nombre) || "";
    }

    const campos = [
      "DEUDOR", "DOMICILIO", "AVAL", "DOMICILIO_AVAL",
      "AVAL_2", "DOMICILIO_AVAL_2", "SUERTE_PRINCIPAL",
      "SUERTE_PRINCIPAL_LETRA", "SUSCRIPCION_LETRA", "INTERES"
    ];

    campos.forEach(id => {
      document.getElementById(id).innerText = obtenerParametro(id);
    });
